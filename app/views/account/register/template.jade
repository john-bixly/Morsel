.row
    .small-12.medium-6.large-6.small-centered.medium-centered.large-centered.columns
        h1 Register
        form
            .row
                .small-12.columns
                    input(type='text', placeholder='User Name', data-rv-value="model:username")
            .row
                .small-12.columns
                    input(type='text', placeholder='Email', data-rv-value="model:email")
            .row
                .small-12.columns
                    input(type='text', placeholder='First Name', data-rv-value="model:firstName")
            .row
                .small-12.columns
                    input(type='text', placeholder='Last Name', data-rv-value="model:lastName")
            .row
                .small-12.columns
                    input(type='password', placeholder='Password', data-rv-value="model:password")
            .row
                .small-12.columns
                    ul.button-group
                        li
                            a.button(href="#", data-rv-on-click="view.submit") Register
                        li
                            a.button(href="/sign-in") Cancel


